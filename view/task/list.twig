{% extends "/common/layout.twig" %}
{% block content %}
    <h3>Your tasks:</h3>
    <div class="row">
        <div class="col-sm-4">
            <h4>ToDo</h4>
            {% for item in items %}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ item.name }}</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-secondary">{{ item.date }}</span>
                            <span class="badge bg-secondary">{{ item.priority }}</span>

                        </div>
                        <p class="card-text">{{ item.text }}</p>
                        <a href="/article/{{ item.id }}" class="link-primary">Read more...</a>
                        <a href="/update/{{ item.id }}"  class="link-secondary">Edit</a>
                    </div>
                </div>
            {% endfor %}
        </div>


        <div class="col-sm-4">
            <h4>Doing</h4>
        </div>

        <div class="col-sm-4">
            <h4>Done</h4>
        </div>

    </div>



{% endblock %}
{% extends "/common/layout.twig" %}
{% block content %}
    <h3>Your tasks:</h3>
    <div class="row">
        <div class="col-sm-4">
            <h4>ToDo</h4>
            {% for item in items | filter((item) => (item.status == 'todo')) %}
                {% include "/task/list_item.twig" %}
            {% endfor %}
        </div>


        <div class="col-sm-4">
            <h4>Doing</h4>
            {% for item in items | filter((item) => (item.status == 'doing')) %}
                {% include "/task/list_item.twig" %}
            {% endfor %}
        </div>

        <div class="col-sm-4">
            <h4>Done</h4>
            {% for item in items | filter((item) => (item.status == 'done')) %}
                {% include "/task/list_item.twig" %}
            {% endfor %}
        </div>

    </div>



{% endblock %}
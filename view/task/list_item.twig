<div class="card {% if not loop.last%} mb-4 {% endif %}">
    <div class="card-body">
        {% if item.mark %}<span class="mark mark-{{ item.mark }}"></span>{% endif %}
        <div class="d-flex justify-content-between">
            <h5 class="card-title">{{ item.name }}</h5>
            <span class="text-secondary">{{ item.date }}</span>
        </div>

        {% if item.text %}
        <p class="card-text">{{ item.text }}</p>
        {% endif %}

        {% if item.checklist %}
        <div class="card-checklist">
            <div class="card-checklist__stats">
                <i class="bi bi-card-checklist text-success fs-5 align-middle"></i>
                <span class="align-middle text-secondary fs-6">{{ item.checklist | filter((item) => (item.done == '1')) | length }} of  {{ item.checklist | length }}</span>
            </div>
            <ul class="list-unstyled">
                {% for checkitem in item.checklist %}
                    <li class="card-checklist__item {% if checkitem.done %} text-decoration-line-through {% endif %}">
                        <input type="checkbox" disabled {% if checkitem.done %} checked="checked" {% endif %}>
                        {{ checkitem.text }}
                    </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}


        <div class="d-flex flex-wrap w-100 justify-content-between">
            <div> <a href="/dashboard/{{ item.dashboard_id }}/task/{{ item.id }}" class="btn btn-sm btn-light"><i class="bi bi-arrow-right"></i></a>
                <a href="/dashboard/{{ item.dashboard_id }}/task/{{ item.id }}/update/"  class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></a>
            </div>
        <div>
            <a href="/dashboard/{{ item.dashboard_id }}/task/{{ item.id }}/delete/"  class="btn btn-sm btn-outline-warning"><i class="bi bi-trash2"></i></a>
        </div>
        </div>
    </div>
</div>